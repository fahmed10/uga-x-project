<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="373.0" prefWidth="712.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ugaxproject.MainController"
style="-fx-background-color: white">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Text fx:id="titleText" strokeType="OUTSIDE" strokeWidth="0.0" text="The Game">
         <font>
            <Font size="30.0" />
         </font></Text>

        <Text fx:id="titleText2" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Username" textAlignment="CENTER">
            <font>
                <Font size="25.0" />
            </font>
        </Text>

        <TextField fx:id="usernameField" alignment="CENTER" prefHeight="50.0" prefWidth="50.0">
            <font>
                <Font size="25.0" />
            </font>
        </TextField>

        <Button fx:id="startButton" onAction="#handleStartGame" text="Start Game"
                prefWidth="180" prefHeight="30" styleClass="custom-button">
            <font>
                <Font size="12.0" />
            </font>
        </Button>

    </children>

</VBox>

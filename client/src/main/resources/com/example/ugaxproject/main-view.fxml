<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="675.0" prefWidth="912.0" spacing="20.0" style="-fx-background-color: black" stylesheets="@style/menu.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ugaxproject.MainController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Text fx:id="titleText" fill="#fff600" strokeType="OUTSIDE" strokeWidth="0.0" text="Miller Mayhem">
         <font>
            <Font size="30.0" />
         </font></Text>

        <Text fx:id="titleText2" fill="#fff600" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Username" textAlignment="CENTER">
            <font>
                <Font size="25.0" />
            </font>
        </Text>

        <TextField fx:id="usernameField" alignment="CENTER" prefHeight="50.0" prefWidth="50.0">
            <font>
                <Font size="25.0" />
            </font>
        </TextField>

        <Button fx:id="startButton" onAction="#handleStartGame" prefHeight="30" prefWidth="180" style="-fx-background-color: black" text="Start Game" textFill="#fff600">
            <font>
                <Font size="12.0" />
            </font>
        </Button>

    </children>
</VBox>
